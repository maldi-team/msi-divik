import { Component, EventEmitter, Input, OnInit, Output } from '@angular/core';

import { GenericFormFetchService } from '../generic-form-fetch.service';

@Component({
  selector: 'app-generic-form',
  templateUrl: './generic-form.component.html',
  styleUrls: ['./generic-form.component.css']
})
export class GenericFormComponent implements OnInit {

  @Input() schemaUrl: string;
  @Input() layoutUrl: string;
  @Output() onSubmit = new EventEmitter<any>();
  schema: any;
  layout: any;

  constructor(private fetchService: GenericFormFetchService) { }

  ngOnInit() {
    this.fetchService.getSchema(this.schemaUrl).subscribe(schema => this.schema = schema);
    this.fetchService.getLayout(this.layoutUrl).subscribe(layout => this.layout = layout);
  }
}
